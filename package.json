{
  "name": "horcrux-ui-dev",
  "version": "0.1.0",
  "private": true,
  "description": "ShadCN-powered component development environment for Horcrux. Includes Storybook, testing, registry.json, and design system experiments.",
  "author": "dgtalbug <dgtalbug@gmail.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/horcrux-framework/horcrux-ui-dev"
  },
  "keywords": [
    "horcrux",
    "shadcn",
    "storybook",
    "design-system",
    "ui-components",
    "radix-ui",
    "tailwindcss",
    "component-library"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build && bun run storybook:build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest run",
    "test:unit": "vitest run --project=unit",
    "test:storybook": "vitest run --project=storybook",
    "type-check": "tsc --noEmit",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "release": "semantic-release",
    "registry:build": "shadcn build -o ./public/v2/r",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build -o public/storybook",
    "storybook:test": "test-storybook",
    "build-storybook": "storybook build"
  },
